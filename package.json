{
  "name": "agentic-scraper-playwright",
  "version": "1.0.0",
  "description": "An agentic web scraping system using LLMs and Playwright to automate data extraction",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "prebuild": "yarn clean",
    "install-browsers": "playwright install",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "web-scraping",
    "llm",
    "typescript",
    "playwright",
    "automation",
    "langchain",
    "ai",
    "browser-automation"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/agentic-scraper-playwright.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/agentic-scraper-playwright/issues"
  },
  "homepage": "https://github.com/yourusername/agentic-scraper-playwright#readme",
  "dependencies": {
    "@langchain/anthropic": "^0.3.23",
    "@langchain/core": "^0.3.61",
    "@langchain/openai": "^0.5.15",
    "dotenv": "^16.3.1",
    "langchain": "^0.3.29",
    "playwright": "^1.40.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
